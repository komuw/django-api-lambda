{
    "name": "ussd-lambda",
    "profile": "apex-up-profile",
    "regions": [
        "eu-west-1"
    ],
    "lambda": {
        "memory": 128,
        "accelerate": true
    },
    "environment": {
        "URL_1": "https://www.google.com/",
        "ENV_VARS": "This are not encrypted in the OSS version"
    },
    "proxy": {
        "command": "python34 app.py runserver 0.0.0.0:$PORT",
        "timeout": 25,
        "listen_timeout": 25
    },
    "hooks": {
        "build": [
            "mkdir -p .pypath/ && pip3 install -r requirements.txt -t .pypath/"
        ],
        "postbuild": [
            "find .pypath/ -name '*.pyc' -type f -delete",
            "find .pypath/ -name '*.pyo' -type f -delete"
        ]
    }
}